{{#if race.name}}
<div class="row">
  <div class="col-2">
  </div>
  <div class="col-10">
    <div class="row">
      <div class="col-4">
        <h2><a name="top">{{race.name}} {{race.year}}</a></h2>
      </div>
      {{#if noResults}}
      <div class="col-6">
        {{#each results}}<a class="btn btn-outline-light" title="Hopp til resultater for {{@key}}" href="#{{@key}}">{{@key}}</a> {{/each}}
      </div>
      {{/if}}
    </div>
    <div class="row">
      <div class="col-3 middle-align">{{race.date}}, {{race.stages}} {{#compare race.stages '===' 1}}etappe{{else}}etapper{{/compare}}</div>
      <div class="col-3 middle-align">{{> series race}}</div>
    </div>
    {{#if race.text}}
    <div class="row">
      <div class="col-10">{{race.text}}</div>
    </div>
    {{/if}}
    {{#if links}}
    <div class="row">
      {{#each links}}
      <div class="col-3"><a href="{{url}}">{{description}}{{> icon}}</a></div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>
{{#each results}}
<div class="row">
  <div class="col-11"> <h3><a name="{{@key}}">{{@key}}</a> </h3></div>
  <div class="col-1"><a class="toplink" title="Tilbake til toppen" href="#top">&#8679</a></div>
</div>
<div class="row">
  <div class="col-12">
    <table class="table table-dark table-striped table-sm main-table">
      <thead>
        <tr>
          <th scope="col" data-sort-method="number">Plass</th>
          <th scope="col">Navn</th>
          {{#each ../stages}}
          <th scope="col">Etappe {{this}}</th>
          {{/each}}
          <th scope="col" data-sort-method="number">Totaltid</th>
          <th scope="col" data-sort-method="number">Etter vinner</th>
        </tr>
      </thead>
      <tbody>
        {{#each this}}
        <tr>
          <th scope="row">{{final_rank}}</th>
          <td><a href="/rytter/{{uid}}">{{name}}</a></td>
          {{#each ../../stages}}
          <td title="nr. {{lookup ../this (propFor this 'rank')}} på etappen, {{lookup ../this (propFor this 'behind_leader')}} bak etappevinner">{{> stagetime result=../this stage=this }}</span></td>
          {{/each}}
          <td data-sort="{{acc_time_ms}}">{{acc_time}}</td>
          <td data-sort="{{acc_time_behind_ms}}">{{#compare acc_time_behind '!==' '00:00.0'}}{{../acc_time_behind}}{{/compare}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
{{/each}}
{{else}}
<div class="row">
  <div class="col-2">
  </div>
  <div class="col-10">
    <p>Beklager, det rittet fant vi ikke. Sikker på at url er riktig?</p>
  </div>
</div>

{{/if}}


