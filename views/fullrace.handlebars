<div class="row">
  <div class="col-2">
  </div>
  <div class="col-10">
    <div class="row">
      <div class="col-4">
        <h2><a name="top"><a href="/ritt/{{race.uid}}"> {{race.name}} {{race.year}}</a></h2>
      </div>
      <div class="col-8">
        <a class="btn btn-outline-light mr-1 mt-2" title="Tilbake til vanlig resultatvisning" href="/ritt/{{race.uid}}">Vanlig resultatvisning</a>
      </div>
    </div>
  <div class="row">
      <div class="col-3 middle-align">{{race.date}} {{race.stages}} {{#compare race.stages '===' 1}}etappe{{else}}etapper{{/compare}}</div>
    </div>
    {{#if race.text}}
    <div class="row">
      <div class="col-10">{{race.text}}</div>
    </div>
    {{/if}}
    {{#if links}}
    <div class="row">
      {{#each links}}
      <div class="col-3"><a href="{{url}}">{{description}}{{> icon}}</a></div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>
<div class="row">
  <div class="col-12"> <h3>Alle klasser</h3></div>
</div>
<div class="row">
  <div class="col-12">
    <table class="table table-dark table-borderless table-striped table-sm main-table">
      <thead>
        <tr>
          <th scope="col" data-sort-method="number">Plass</th>
          <th scope="col">Navn</th>
          <th scope="col">Klasse</th>
          {{#each stages}}
          <th scope="col">Etappe {{this}}</th>
          {{/each}}
          <th scope="col" data-sort-method="number">Totaltid</th>
          <th scope="col" data-sort-method="number">Etter vinner</th>
        </tr>
      </thead>
      <tbody>
        {{#each results}}
        <tr">
          <td scope="row">{{fullrank}}</td>
          <td><a data-id="{{rider_id}}" href="/rytter/{{uid}}">{{name}}</a></td>
          <td>{{class}}</a></td>
          {{#each ../stages}}
          <td><span data-toggle="tooltip" data-original-title="nr. {{lookup ../this (propFor this 'rank')}} pÃ¥ etappen, {{lookup ../this (propFor this 'behind_leader')}} bak etappevinner">{{> stagetime result=../this stage=this }}</span></td>
          {{/each}}
          <td data-sort="{{acc_time_ms}}">{{#compare acc_time '===' '00:00.0'}}<span class=dnf>{{../final_status}}</span>{{else}}{{../acc_time}}{{/compare}}</td>
          <td data-sort="{{acc_time_behind_ms}}">{{#compare acc_time_behind '!==' '00:00.0'}}{{../acc_time_behind}}{{/compare}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>


