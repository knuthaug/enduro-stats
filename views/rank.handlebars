<div class="row">
  <div class="col-2"></div>
  <div class="col-7"> <h2><a name="top">Rytterranking</a></h2></div>
  <div class="col-3">
    <a class="btn btn-outline-light mr-1 mt-2" title="Hopp til resultater for menn" href="#men">Menn</a>
    <a class="btn btn-outline-light mr-1 mt-2" title="Hopp til resultater for Kvinner" href="#women">Kvinner</a>
  </div>
</div>

<div class="row">
  <div class="col-2"></div>
  <div class="col-8"> <h3><a class="none" name="women">Kvinner</a></h3></div>
  <div class="col-2"><a class="toplink" data-toggle="tooltip" data-original-title="Tilbake til toppen" href="#top">{{>icon type='pil'}}</a></div>
</div>
<div class="row">
  <div class="col-2"></div>
<div class="col-8">
  <table class="table table-hover table-borderless table-dark table-striped table-sm" data-sortable id="riders-table-women">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Navn</th>
        <th scope="col">Klubb</th>
        <th scope="col">Dato beregnet</th>
        <th scope="col">Score</th>
      </tr>
    </thead>
    <tbody>
      {{#each women}}
      <tr>
        <td>{{inc @index}}</td>
        <td><a href="/rytter/{{uid}}">{{name}}</a></td>
        <td>{{club}}</td>
        <td>{{date}}</td>
        <td>{{score}}</td>
      </tr>
      {{/each}}
      <tr>
    </tbody>
  </table>
</div>
<div class="col-2"></div>
</div>

<div class="row">
  <div class="col-2"></div>
  <div class="col-9"> <h3><a class="none" name="men">Menn</a></h3></div>
  <div class="col-1"><a class="toplink" data-toggle="tooltip" data-original-title="Tilbake til toppen" href="#top">{{>icon type='pil'}}</a></div>
</div>
<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
      <table class="table table-hover table-borderless table-dark table-striped table-sm" data-sortable id="riders-table-men">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Navn</th>
            <th scope="col">Klubb</th>
            <th scope="col">Dato beregnet</th>
            <th scope="col">Score</th>
          </tr>
        </thead>
        <tbody>
          {{#each men}}
          <tr>
            <td>{{inc @index}}</td>
            <td><a href="/rytter/{{uid}}">{{name}}</a></td>
            <td>{{club}}</td>
            <td>{{date}}</td>
            <td>{{score}}</td>
          </tr>
          {{/each}}
          <tr>
        </tbody>
      </table>
  </div>
  <div class="col-2"></div>
</div>

<script src="/assets/js/{{hashedAssets 'rank.js'}}" crossorigin="anonymous"></script>
