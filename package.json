{
  "name": "enduro-stats",
  "version": "1.0.0",
  "description": "",
  "main": "server/index.js",
  "scripts": {
    "precommit": "npm run test",
    "watch": "npm-watch start",
    "clean": "rimraf bundlemap-js.json server/dist/js server/dist/css",
    "start": "nodemon server/index.js",
    "test": "NODE_ENV=test ./node_modules/tap/bin/run.js -R spec test/*_test.js",
    "test:integration": "NODE_ENV=test ./node_modules/tap/bin/run.js -R spec integration-test/*_test.js",
    "coverage": "NODE_ENV=test nyc npm test",
    "autotest": "NODE_ENV=test supervisor -q -n exit -x ./node_modules/tap/bin/run.js -R spec 'test/*_test.js'",
    "build:js": "webpack",
    "build:css": "postcss server/src/css/main.css -o server/dist/css/bundle.css && cp server/src/css/bootstrap* server/dist/css/",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "lint": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knuthaug/enduro-stats.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/knuthaug/enduro-stats/issues"
  },
  "homepage": "https://github.com/knuthaug/enduro-stats#readme",
  "devDependencies": {
    "@babel/core": "7.1.6",
    "assets-webpack-plugin": "3.9.7",
    "babel": "6.23.0",
    "babel-cli": "6.26.0",
    "babel-loader": "8.0.4",
    "bootstrap": "4.1.3",
    "css-loader": "1.0.1",
    "db-migrate": "0.11.4",
    "db-migrate-pg": "0.4.0",
    "db-migrate-sqlite3": "0.3.1",
    "jquery": "3.3.1",
    "nock": "latest",
    "nodemon": "1.18.6",
    "npm-watch": "0.4.0",
    "popper.js": "1.14.6",
    "postcss": "7.0.6",
    "postcss-cli": "6.0.1",
    "postcss-import": "12.0.1",
    "rewire": "latest",
    "rimraf": "2.6.2",
    "sinon": "latest",
    "sqlite": "3.0.0",
    "standard": "latest",
    "style-loader": "0.23.1",
    "supertest": "3.3.0",
    "supervisor": "latest",
    "tap": "latest",
    "webpack": "4.25.1",
    "webpack-cli": "3.1.2"
  },
  "dependencies": {
    "await-fs": "1.0.0",
    "compression": "1.7.3",
    "convict": "4.4.0",
    "express": "4.16.4",
    "express-handlebars": "3.0.0",
    "md5": "2.2.1",
    "morgan": "1.9.1",
    "neat-csv": "4.0.0",
    "pg": "7.6.0",
    "pino": "5.8.1"
  },
  "watch": {
    "start": {
      "patterns": [
        "server",
        "config",
        "views/",
        "views/partials",
        "views/layouts"
      ],
      "extensions": "js,json,css,handlebars",
      "ignore": "node_modules, public"
    }
  }
}
