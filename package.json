{
  "name": "enduro-stats",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "precommit": "npm run test",
    "watch": "npm-watch foo",
    "build-watch": "npm-watch build",
    "clean": "rimraf bundlemap-js.json server/dist/js server/dist/css",
    "foo": "npm run clean && npm run build:css && npm run build:js && npm start",
    "start": "node index.js",
    "test": "NODE_ENV=test ./node_modules/tap/bin/run.js --no-coverage-report test/*_test.js",
    "test:integration": "NODE_ENV=test ./node_modules/tap/bin/run.js -R spec integration-test/*_test.js",
    "coverage": "NODE_ENV=test nyc npm test",
    "autotest": "NODE_ENV=test ./node_modules/tap/bin/run.js -w --no-coverage-report --no-check-coverage 'test/*_test.js'",
    "build:js": "webpack && cp server/src/js/sortable.min.js server/dist/js/",
    "build:css": "postcss server/src/css/main.css -o server/dist/css/bundle.css && postcss server/dist/css/bundle.css -o server/dist/css/bundle.css && cp server/src/css/bootstrap* server/dist/css/ && cp server/src/css/sort-table.css server/dist/css/ && postcss server/dist/css/sort-table.css -o server/dist/css/sort-table.css",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "lint": "standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/knuthaug/enduro-stats.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/knuthaug/enduro-stats/issues"
  },
  "homepage": "https://github.com/knuthaug/enduro-stats#readme",
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.1.6",
    "assets-webpack-plugin": "3.9.7",
    "await-fs": "1.0.0",
    "babel": "6.23.0",
    "babel-loader": "8.0.4",
    "bootstrap": "4.3.1",
    "command-line-args": "5.0.2",
    "copy-webpack-plugin": "4.6.0",
    "css-loader": "1.0.1",
    "cssnano": "4.1.10",
    "db-migrate": "0.11.4",
    "db-migrate-pg": "0.4.0",
    "db-migrate-sqlite3": "0.3.1",
    "feather-icons": "4.9.0",
    "jquery": "3.4.1",
    "just-extend": ">=4.0.0",
    "leaflet": "1.5.1",
    "leaflet-gpx": "1.4.0",
    "leaflet-plugins": "3.3.0",
    "md5": "2.2.1",
    "neat-csv": "4.0.0",
    "nock": "11.3.4",
    "nodemon": "1.18.7",
    "npm-watch": "0.5.0",
    "popper.js": "1.14.6",
    "postcss": "7.0.6",
    "postcss-cli": "6.1.2",
    "postcss-hash": "1.0.2",
    "postcss-import": "12.0.1",
    "rewire": "latest",
    "rimraf": "2.6.2",
    "sinon": "7.4.2",
    "sqlite": "3.0.0",
    "standard": "14.0.2",
    "style-loader": "0.23.1",
    "supertest": "3.3.0",
    "supervisor": "latest",
    "tap": "14.4.2",
    "webpack": "4.25.1",
    "webpack-cli": "3.1.2"
  },
  "dependencies": {
    "compression": "1.7.3",
    "convict": "4.4.0",
    "date-fns": "1.30.1",
    "express": "4.16.4",
    "express-handlebars": "3.0.0",
    "morgan": "1.9.1",
    "pg": "7.6.0",
    "pino": "5.8.1"
  },
  "watch": {
    "build": {
      "patterns": []
    },
    "foo": {
      "patterns": [
        "server/*.js",
        "server/src/js",
        "server/src/css",
        "config",
        "views/",
        "views/partials",
        "views/layouts"
      ],
      "extensions": "js,json,css,handlebars",
      "ignore": [
        "node_modules",
        "server/dist/js",
        "server/dist/css"
      ]
    }
  },
  "standard": {
    "ignore": [
      "migrations/",
      "server/src/js"
    ]
  }
}
